<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">

    <url-mapping id="welcome">
        <pattern value="/city/#{clickableBudgetView.selectedCity}"/>
        <view-id value="/index.xhtml?selectedCity=#{clickableBudgetView.selectedCity}"/>
    </url-mapping>

<!--    <url-mapping id="cards">
        <pattern value="/projects/#{cardView.selectedCard}"/>
        <view-id value="/index.xhtml?selectedCard=#{cardView.selectedCard}"/>
    </url-mapping>-->

    <url-mapping id="dashboard">
        <pattern value="/dashboard/#{cardDetailView.selectedCardDashboard}"/>
        <view-id value="/dashboardcarddetail.xhtml?selectedCard=#{cardDetailView.selectedCardDashboard}"/>
    </url-mapping>

    <url-mapping id="projects">
        <pattern value="/projects/#{cardDetailView.selectedCardDashboard}"/>
        <view-id value="/carddetail.xhtml?selectedCard=#{cardDetailView.selectedCard}"/>
    </url-mapping>

</pretty-config>
